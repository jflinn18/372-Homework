package PI;

public class CalculatePI {

	public static double PI;
	
	public static double calcPI(int times)
	{
		for (int i = 0; i < times; i++)
		{
			/**
			 * If i is even, subtract the value from PI
			 */
			if (i % 2 == 0)
				PI -= 4/(i+(i-1));
			/**
			 * If i is odd, add the value to PI
			 */
			else
				PI += 4/(i+(i-1))
		}
		
		return PI;
	}
}
